{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "prettier", "next/core-web-vitals"],
  "overrides": [],

  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@next/eslint-plugin-next"],
  "rules": {
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"],
    "no-multiple-empty-lines": ["warn", { "max": 2, "maxEOF": 0 }],
    "no-unused-vars": "warn"
  }
}
